<div class="novo_produto">
    <div class="form-group">
      <label for="codigo" class="text-light">Codigo</label>
      <input type="hidden" name="id" id="inputId" value="" />
      <input id="inputCodigo" type="text" name="codigo" value=""
          placeholder="Digite o codigo do produto" required />
    </div>
    <div class="form-group">
      <label for="descricao" class="text-light">Descrição</label>
      <input id="inputDescricao" type="text" name="descricao"  
          value="" placeholder="Digite a descrição do produto"
          required />
    </div>
    <div class="form-group">
      <label for="preco" class="text-light">Preço</label>
      <input id="inputPreco" type="text" name="preco" value=""
          placeholder="Digite o preço do produto" required />
    </div>
    <div class="form-group">
      <label for="quantidade" class="text-light">Quantidade</label>
      <input id="inputQuantidade" type="text" name="quantidade"
          value="" placeholder="Digite a quantidade do produto"
          required />
    </div>
    <div class="form-group">
      <button type="submit" class="btn text-dark update" id="btnSalvar">
        Cadastrar
      </button>
    </div>
</div>